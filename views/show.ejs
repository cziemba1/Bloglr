<%- include("./partials/header") %>
<div class="ui main text container segment" id="nueva-entrada">
    <div class="ui huge header" id="nueva-entrada"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%- blog.image %>" alt="<%- blog.title %>">
            <div id="button" class="description">
                <p><%= blog.body %></p>
            </div>
            <div class="content">
                <p><%= blog.created.toDateString() %></p>
            </div>
            <a id="button" class="ui violet basic button" href="/blogs/<%= blog._id %>/edit">Editar</a>
            <form id="delete" method="POST" action="/blogs/<%= blog._id %>?_method=DELETE">
                <button class="ui red basic button">Eliminar</button>
            </form>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>